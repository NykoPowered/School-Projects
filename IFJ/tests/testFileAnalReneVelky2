def fact(n)
end

def factorial(n)
	if n < 2 then
		result = 1
	else
		decremented_n = n - 1
		temp_result = fact decremented_n
		result = n * temp_result
	end
	result
end

print "Zadejte cislo pro vypocet faktorialu: "
a = inputi
if a < 0 then
	print "\nFaktorial nelze spocitat\n"
else
	vysl = factorial a
	print("\nVysledok je:", vysl, "\n")
end
